{
  "name": "easy-dash-monorepo",
  "version": "1.0.0",
  "description": "Easy Dash - Frontend and Backend Monorepo",
  "private": true,
  "workspaces": [
    "front",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:backend\"",
    "dev:front": "cd front && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:front && npm run build:backend",
    "build:front": "cd front && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:front\" \"npm run start:backend\"",
    "start:front": "cd front && npm run start",
    "start:backend": "cd backend && npm run start:prod",
    "install:all": "npm install && cd front && npm install && cd ../backend && npm install",
    "clean": "rm -rf front/node_modules backend/node_modules front/.next backend/dist",
    "lint": "npm run lint:front && npm run lint:backend",
    "lint:front": "cd front && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
